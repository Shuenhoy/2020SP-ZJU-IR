    "version": "0.2.0",
    "configurations": [
        {
            "name": "build_index",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/ir_build_index",
            "args": [
                "test/input",
                "test/output",
                "2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }, 
        {
            "name": "ir",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/ir",
            "args": [
                "test/index",
                "2",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}